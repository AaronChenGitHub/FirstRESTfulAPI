<div id="rest">
    <div class="container">
        <div class="row">
            <div class="col-4">
                <input type="text" v-model="firstName" placeholder="請輸入名字..." />
                <input type="text" v-model="lastName" placeholder="請輸入姓氏..." />
            </div>
            <div class="col-4">
                <button type="button" class="btn btn-primary" v-on:click="addOnce">新增</button>
            </div>
        </div>

        <div class="mt-3" v-for="(item,index) in dataAll">
            <div class="row">
                <div class="col-6">
                    <label>員工:</label>
                    <input type="text" :value="item.employeeId" readonly style="width:50px;" />
                    <input type="text" :value="item.firstName" />
                    <input type="text" :value="item.lastName" />
                    <button type="button" :accessKey="index" v-on:click="update($event)" class="btn btn-warning">修改</button>
                    <button type="button" :accessKey="index" v-on:click="dele($event)" class="btn btn-danger">刪除</button>
                </div>
            </div>
        </div>
    </div>
    @* 修改視窗 *@
    <fieldset v-show="isShow" id="edit">
        <table>
            <tr>
                <td>員工編號</td>
                <td><input type="text" v-model="curEmp.employeeId" readonly style="width:50px;" /></td>
            </tr>
            <tr>
                <td>名字</td>
                <td><input type="text" v-model="curEmp.firstName" /></td>
            </tr>
            <tr>
                <td>姓氏</td>
                <td><input type="text" v-model="curEmp.lastName" /></td>
            </tr>
        </table>
        <fieldset id="del" v-show="isDelete">
            <div class="text-danger" style="font-size:24px;">是否確定刪除這筆資料?</div>
        </fieldset>
    </fieldset>
</div>

@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/vue@2.7.8/dist/vue.js"></script>
    <script src="~/js/axios.min.js"></script>
    <script>
        var app = new Vue({
            data: {
                dataAll: [],
                firstName: '',
                lastName: '',
                isShow: false,
                curEmp: {},
                isDelete:false
            },
            methods: {
                addOnce: function () {
                    let self = this;
                    if (self.firstName === "" && self.lastName === "") {
                        self.firstName = null;
                        self.lastName = null;
                    }
                    axios({
                        method: 'POST',
                        url: "https://localhost:5001/api/EmployeeApi/Add/rawdata",
                        headers: { "Content-Type": "application/json" },
                        data: {
                            "FirstName": self.firstName,
                            "LastName": self.lastName
                        }
                    })
                        .then(res => {
                            console.log(res.data);
                            app.$nextTick(function () {
                                let url = "https://localhost:5001/api/EmployeeApi/GetAll/rawdata";
                                let self = this;
                                axios.get(url)
                                    .then(res => {
                                        self.dataAll = res.data;
                                    })
                                    .catch(err => {

                                    });
                            })
                            alert("新增成功");
                        })
                        .catch(err => {
                            console.log(err);
                            alert("格式不對喔~");
                        });
                },
                getAll: function () {
                    let url = "https://localhost:5001/api/EmployeeApi/GetAll/rawdata";
                    let self = this;
                    axios.get(url)
                        .then(res => {
                            self.dataAll = res.data;
                        })
                        .catch(err => {

                        });
                },
                updateEmp: function () {
                    axios(
                        {
                            method: 'PUT',
                            url: "https://localhost:5001/api/EmployeeApi/update/rawdata",
                            headers: { "Content-Type": "application/json" },
                            data: this.curEmp
                        }
                    ).then(
                        (resp) => {
                            console.log(resp);

                        }
                    ).catch(
                        (resp) => {
                            console.log(resp);

                        }
                    );
                },
                update: function (e) {
                    let index = e.target.accessKey;
                    this.curEmp = this.dataAll[index];
                    $('#edit').dialog(
                        {
                            title: '員工資料修改',
                            width: 400,
                            heigth: 500,
                            modal: true,
                            buttons: [
                                {
                                    text: '更新',
                                    click: function () {
                                        app.updateEmp();
                                        alert("修改成功");
                                    },
                                    class: 'btn-danger'
                                },
                                {
                                    text: '取消',
                                    click: function () {
                                        $(this).dialog('close');
                                    },
                                    class: 'btn-primary'
                                }

                            ]

                        }
                    );
                },
                delEmp:function(){
                     axios(
                        {
                            method: 'DELETE',
                            url: `https://localhost:5001/api/EmployeeApi/delete/rawdata?id=${this.curEmp.employeeId}`,
                            headers: { "Content-Type": "application/json" }
                        }
                    ).then(
                        (resp) => {
                            console.log(resp);
                            app.$nextTick(function () {
                                let url = "https://localhost:5001/api/EmployeeApi/GetAll/rawdata";
                                let self = this;
                                axios.get(url)
                                    .then(res => {
                                        self.dataAll = res.data;
                                    })
                                    .catch(err => {

                                    });
                            })
                        }
                    ).catch(
                        (resp) => {
                            console.log(resp);

                        }
                    );
                },
                dele:function(e){
                    let index = e.target.accessKey;
                    this.curEmp = this.dataAll[index];
                     $('#del').dialog(
                        {
                            title: '員工資料刪除',
                            width: 400,
                            heigth: 500,
                            modal: true,
                            buttons: [
                                {
                                    text: '刪除',
                                    click: function () {
                                        app.delEmp();
                                        alert("刪除成功");
                                    },
                                    class: 'btn-danger'
                                },
                                {
                                    text: '取消',
                                    click: function () {
                                        $(this).dialog('close');
                                    },
                                    class: 'btn-primary'
                                }

                            ]

                        }
                    );
                }
            },
            mounted: function () {
                this.getAll();
            }
        });
        app.$mount("#rest")
    </script>
}